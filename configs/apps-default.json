  "windowsTweaks": {
    "fileExplorer": {
      "enabled": true,
      "settings": {
        "openToThisPC": true,
        "showFileExtensions": true,
        "showHiddenFiles": true,
        "showSystemFiles": true,
        "showDriveLetters": true,
        "showEncryptedCompressedColor": true,
        "showPopupDescriptions": true,
        "disableRecentFiles": true,
        "disableFrequentFolders": true
      }
    },
    
    "taskbar": {
      "enabled": true,
      "settings": {
        "removeSearchBox": true,
        "removeWidgets": true,
        "removeChatButton": true,
        "enableEndTask": true,
        "alignment": "center"
      }
    },
    
    "privacy": {
      "enabled": true,
      "settings": {
        "disableCortana": true,
        "disableWebSearch": true
      }
    },
    
    "appearance": {
      "enabled": true,
      "settings": {
        "enableDarkMode": true,
        "darkModeApps": true,
        "darkModeSystem": true
      }
    },
    
    "powerManagement": {
      "enabled": true,
      "settings": {
        "disableHibernation": true,
        "powerMode": "highPerformance",
        "pluggedInSettings": {
          "displayTimeout": 60,
          "sleepTimeout": 0,
          "hibernateTimeout": 0
        },
        "energySaver": false,
        "desktopOnly": true
      }
    },
    
    "systemEnhancements": {
      "enabled": true,
      "settings": {
        "verboseStatus": true,
        "disableSearchBoxSuggestions": true,
        "showSecondsInClock": true
      },
      "attribution": "ThioJoe - https://www.youtube.com/watch?v=V7AuHBZsOj0"
    }
  },
  
  "systemSettings": {
    "createRestorePoint": true,
    "restartExplorer": true,
    "generateLog": true
  },
  
